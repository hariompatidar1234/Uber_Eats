<body>
  <h1>Add to Cart</h1>

  <% if flash[:notice] %>
    <div class="flash-notice">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="flash-alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: carts_path, method: :post, local: true do |form| %>
    <label for="dish_id">Select Dish:</label>
    <%= form.grouped_collection_select :dish_id, Restaurant.all.order(:name), :dishes, :name, :id, :name, { prompt: "Choose a Dish" }, required: true %>

    <label for="quantity">Quantity:</label>
    <%= form.number_field :quantity, required: true %>

    <%= form.submit 'Add to Cart', class: 'btn-primary' %>
  <% end %>

  <%= link_to 'View Cart', carts_path, class: 'btn-primary' %>
