<!-- app/views/carts/new.html.erb -->

<h1>Add Dish to Cart</h1>
    
<%= form_with(model: [@cart,@cart_item],url: carts_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :dish_id, 'Dish:' %>
    <%= form.collection_select :dish_id, Dish.all, :id, :name, prompt: 'Select a dish', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, 'Quantity:' %>
    <%= form.number_field :quantity, class: 'form-control', min: 1, value: 1 %>
  </div>

  <%= form.submit 'Add to Cart', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Cart', carts_path, class: 'btn btn-secondary' %>
