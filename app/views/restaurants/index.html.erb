

<h1>Listing Restaurants</h1>
<p> <%= flash[:message] %> </p>
<table>

    <tr>
      <th>Name</th>
      <th>Status</th>

    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.status %></td>
        <td><%= link_to "Show", restaurant_path(r) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "profile", current_user_profile_path %>
<%= link_to "create restaurants", '/restaurants/new' %>
<br>
<%- if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path %> <br />
<%end %>
