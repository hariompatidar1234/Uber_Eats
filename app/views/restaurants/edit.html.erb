<% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path %> <br />
<%end %>

<%= link_to "Back", restaurants_path %>
<h1>Edit Restaurant</h1>
<% if flash.any? %>
    <% flash.each do |type, msg| %>
    <div>
    <%= msg %>
    </div>
    <% end %>
  <% end %>

<%= form_with(model: @restaurant, url: restaurant_path(@restaurant), method: :patch) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Restaurant Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'Status' %>
      <%= select_tag "status", options_for_select(["open", "close"], @restaurant.status) %>
  </div>

  <div class="form-group">
    <%= f.label :address, 'Address' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :restaurant_image, "picture" %>
  <%= f.file_field :picture%>
  </div

  <div class="actions">
    <%= f.submit 'Update Restaurant', class: 'btn btn-primary' %>
  </div>

<% end %>


