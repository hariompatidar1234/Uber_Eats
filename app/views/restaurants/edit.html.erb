<style>
.form-group {
  width: 100%;
  height: 40px;
  margin: 10px 50px 13px ;
  position: relative;

  }

  .btn-primary {
    background-color: #007bff;
    color: #fff;
    border-width: 2px;
    display: inline;
    margin: 5px;
    display: inline-block;
    text-decoration: none; /* not underline  */
    id #000;
    border-radius: 5px

  }

  .container{
  width: 800px;
  max-width: 400px;
  margin: 0 auto;
  background-color: #fff;
  padding: 25px 40px 10px 40px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}


.body-container{
  display: flex;
  align-items: center;
  /*justify-content: center;*/
  min-height: 100vh;
  padding: 10px;
  font-family: 'Poppins', sans-serif;
  background-color: #f4f4f4;
}


/*.actions {
  margin: 20px 0;
}*/

input[type="submit"] {
  /*background-color: #007bff;*/
  /*color: #fff;*/
  border: none;
  padding: 10px 20px 10px ;
  border-radius: 5px;
  margin: 10px 10px 20px 50px;
}

</style>

<div class="body-container">
  <div class="container">
    <% if user_signed_in? %>
          <%= link_to "Sign out", destroy_user_session_path %> <br />
    <%end %>

    <%= link_to "Back", restaurants_path %>
    <% if flash.any? %>
        <% flash.each do |type, msg| %>
        <div>
        <%= msg %>
        </div>
        <% end %>
      <% end %>

    <%= form_with(model: @restaurant, url: restaurant_path(@restaurant), method: :patch) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Restaurant Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :status, 'Status' %>
        <%= select_tag "status", options_for_select(["open", "close"], @restaurant.status) %>
      </div>

      <div class="form-group">
        <%= f.label :address, 'Address' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :restaurant_image, "picture" %>
      <%= f.file_field :picture%>
      </div

      <div class="actions">
        <%= f.submit 'Update Restaurant', class: 'btn btn-primary' %>
      </div>

    <% end %>

  </div>
</div>
