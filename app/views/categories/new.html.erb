<div class="container">
  <% if current_user.type == 'Owner' %>
    <%= form_with model: @category, url: categories_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Category Name' %><br>
        <%= f.text_field :name, class: 'form-control' %>
        <% @category.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
         <% end %>
      </div>
      <br>
        <%= f.submit 'Create category', class: 'btn btn-primary' %>
    <% end %>
  <% else %>
    <p class="error-message">You cannot create Category </p>
  <% end %>
  <%= link_to "Back", restaurants_path %>
</div>
