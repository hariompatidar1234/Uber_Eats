
<style>
td {
  border: 1px solid#000; padding: 8px;
   background-color: #847e7e;
}
  .btn-primary{
   border-radius: 5px;
    text-decoration: none;
}
</style>
<h1>Category Type</h1>
<table style="background-color: pink; ">
  <thead style="color: green; background-color: black; ">
    <tr>
      <th> Id </th>
      <th> Category name</th>
      <th> show </th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.name %></td>
        <td><%= link_to "show", category_path(r), class: 'btn btn-primary'%></td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Back", restaurants_path %>
