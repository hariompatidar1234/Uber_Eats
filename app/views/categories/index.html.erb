<h1>Category Type</h1>
<div class="category-container">
  <div class="container">
    <table style="background-color: pink; ">
      <thead style="color: green; background-color: black; ">
        <tr>
          <th> Id </th>
          <th> Category name</th>
          <th> show </th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |r| %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.name %></td>
            <td><%= link_to "show", category_path(r), class: 'btn btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
