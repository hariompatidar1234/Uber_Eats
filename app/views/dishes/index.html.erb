  <style>
    /* General button styling */
    .button {
      display: inline-block;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      margin: 5px;
      border: 1px solid #000;
      border-radius: 5px;
    }

    /* Styling for the search form */
    .search-form {
      margin: 10px 0;
    }

    .search-input {
      padding: 5px;
      border: 1px solid #007bff;
    }

    .search-button {
      padding: 5px 10px;
      background-color: #007bff;
      color: #fff;
      border: 1px solid #007bff;
      border-radius: 5px;
    }

    .search-button:hover {
      background-color: #0056b3;
    }

    /* Navbar styling */
    .navbar {
      background-color: #333;
      overflow: hidden;
    }

    .navbar a {
      float: left;
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    .navbar .dropdown {
      float: right;
      overflow: hidden;
    }

    .navbar .dropdown .dropbtn {
      font-size: 16px;
      border: none;
      outline: none;
      color: white;
      background-color: inherit;
    }

    .navbar .dropdown-content {
      display: none;
      position: absolute;
      background-color: #333;
      min-width: 160px;
      z-index: 1;
    }

    .navbar .dropdown-content a {
      float: none;
      color: white;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .navbar .dropdown-content a:hover {
      background-color: #ddd;
      color: black;
    }

    .navbar .dropdown:hover .dropdown-content {
      display: block;
    }

    /* Three lines button styling (Hamburger menu) */
    .menu-button {
      float: right;
      padding: 14px 16px;
      cursor: pointer;
    }

    /* Main container */
    .container {
      display: flex;
      flex-wrap: wrap;
    }

    /* Dish container */
    .dish-container {
      width: 33.33%;
      padding: 10px;
      text-align: center;
      background: #f7f7f7; /* Background color for dish containers */
      border: 1px solid #ddd; /* Border for dish containers */
      border-radius: 5px; /* Rounded corners */
      margin: 10px; /* Add some margin between containers */
    }

    /* Dish image styling */
    .dish-image {
      max-width: 100%;
      height: auto;
    }

    /* Dish details styling */
    .dish-details {
      padding: 10px;
    }

    /* Back button styling */
    .back-button {
      text-align: left;
      margin: 10px 20px;
    }

    .btn-back {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-back:hover {
      background-color: #0056b3;
    }
  </style>
<body>

<!-- Navigation Bar -->
<div class="navbar">
  <a href="<%= new_restaurant_path %>">Create Restaurants</a>
  <a href="<%= new_category_path %>">Create Category</a>
  <a href="dishes">Dish List</a>
  <a href="categories">Category List</a>
  <!-- Add more links as needed -->
  <div class="dropdown">
    <button class="dropbtn">User Profile & Sign Out</button>
    <div class="dropdown-content">
      <a href="<%= current_user_profile_path %>">User Profile</a>
      <% if user_signed_in? %>
        <a href="<%= destroy_user_session_path %>" class="signout-button">Sign Out</a>
      <% end %>
    </div>
  </div>
  <!-- Hamburger menu icon -->
  <div class="menu-button" onclick="toggleMenu()">&#9776;</div>
</div>

<!-- Back Button at the Top -->
<div class="back-button">
  <%= link_to "Back", restaurants_path, class: 'btn btn-back' %>
</div>

<h3>Dish List</h3>

<div class="search-form">
  <%= form_tag(dishes_path, method: :get) do %>
    <%= text_field_tag :name, params[:name], placeholder: 'Search by Name', class: 'search-input' %>

    <%= submit_tag 'Search', class: 'search-button' %>
  <% end %>
</div>

<div class="container">
  <% @dishes.each do |d| %>
    <div class="dish-container">
      <div class="dish-image">
        <% if d.picture.attached? %>
          <a href="<%= dish_path(d) %>">
            <%= image_tag(d.picture, size: "200x160") %>
          </a>
        <% else %>
            <%=image_tag("test_image.png", size: "220x180") %>
        <% end %>
      </div>
      <div class="dish-details">
        <h2>
          <a href="<%= dish_path(d) %>">
            <%= d.name %>
          </a>
        </h2>
        <p>Dish_id: <%= d.id %></p>
        <p>Price: <%= d.price %></p>
        <p>Category: <%= Category.find_by_id(d.category_id).name %></p>
        <p>Other Details: <!-- Add other details here --></p>
        <p><%= link_to "Show", dish_path(d), class: "button" %></p>
      </div>
    </div>
  <% end %>
</div>

</body>
